<div class="container">
  <div class="row">
    <div class="col-md-4">
      <h3>Register</h3>
      <form method="post" action="/register">
        <div class="form-group">
          <label for="username">Username</label>
          <input type="text" class="form-control" id="regusername" placeholder="Username" name="username">
        </div>
        <div class="form-group">
          <label for="password">Password</label>
          <input type="password" class="form-control" id="regpassword" placeholder="Password" name="password">
        </div>
        <button type="submit" class="btn btn-default">Register</button>
      </form>
    </div>
    <div class="col-md-4">
      <h3>Login</h3>
      <form method="post" action="/login">
        <div class="form-group">
          <label for="username">Username</label>
          <input type="text" class="form-control" id="logusername" placeholder="Username" name="username">
        </div>
        <div class="form-group">
          <label for="password">Password</label>
          <input type="password" class="form-control" id="logpassword" placeholder="Password" name="password">
        </div>
        <button type="submit" class="btn btn-default">Login</button>
      </form>
    </div>
  </div>
</div>